<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title></title>
</head>
<body>
  <h1>Send Message</h1>
  <% if (locals.errors) { %>
    <ul>
        <% errors.forEach(err => { %>
            <li><%= err.msg %></li>
        <% }) %>
    </ul>
  <% } %>
  <form action="" method="POST">
   <input type="text" name="title" placeholder="title" value="<%= locals.values ? title : ''%>">
   <input type="text" name="text" placeholder="..." value="<%= locals.values ? text : ''%>">
    <button>-></button>
  </form>
</body>
</html>
